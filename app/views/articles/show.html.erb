<div class="container">

  <div>
    <h1><%= @article.title %></h1>
    <p><%= @article.content %></p>
  </div>

  <div>
    <%= link_to edit_article_path(@article) do %>
      <i class="fa-regular fa-pen-to-square"></i>
    <% end %>

    <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </div>

</div>
